generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserProfile {
  firstName String
  lastName  String
}

model User {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime     @db.Date
  email     String       @unique
  password  String
  profile   UserProfile?
  updatedAt DateTime     @db.Date
}

type Profile {
  firstName  String
  lastName   String
}